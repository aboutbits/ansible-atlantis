services:
  atlantis:
    image: ghcr.io/runatlantis/atlantis:{{ atlantis_docker_tag }}
    restart: unless-stopped
    ports:
      - "{{ atlantis_server_port }}:4141"
    volumes:
      - atlantis_home:/home/atlantis
      - ./config.yml:/etc/atlantis/config.yml
    env_file:
      - .env

volumes:
  atlantis_home:
    driver: local
